{
  "name": "hex-mastery",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest --config config/jest.config.cjs",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "test:debug": "playwright test --config config/playwright.debug.config.ts",
    "test:screenshots": "playwright test -c config/playwright.screenshots.config.ts",
    "generate:graph": "depcruise src --include-only \"^src\" --exclude \"(\\.test\\.ts|\\.spec\\.ts|testUtils\\.ts)$\" --no-config --output-type dot > dependency-graph.dot && dot -T svg dependency-graph.dot > docs/images/dependency-graph.svg && dot -T png dependency-graph.dot > docs/images/dependency-graph.png && rm dependency-graph.dot"
  },
  "dependencies": {
    "boardgame.io": "^0.50.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hexgrid": "^2.0.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.22.3",
    "react-tooltip": "^5.30.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "dependency-cruiser": "^17.3.6",
    "eslint": "^8.57.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "^5.2.0"
  }
}
